{
  "name": "@sdl/bpmn",
  "version": "0.1.0",
  "description": "BPMN diagram rendering library for SDL with ORNL design system integration",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md",
    "tsconfig.json"
  ],
  "scripts": {
    "build": "tsc",
    "postinstall": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "bpmn",
    "svg",
    "diagram",
    "workflow",
    "ornl",
    "sdl",
    "scientific-data-layer"
  ],
  "author": "SDL Team",
  "license": "MIT",
  "dependencies": {
    "bpmn-js": "^17.11.1",
    "bpmn-js-headless": "^0.1.0",
    "jsdom": "^25.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^9.9.1",
    "playwright": "^1.54.2",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
